
@{
    ViewBag.Title = "EBook - Thanh toán";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4">Địa chỉ đặt hàng</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        @*Tên khách*@
                        <label>Họ và tên</label>
                        <input class="form-control" type="text" placeholder="Nguyễn Văn A">
                    </div>
                    <div class="col-md-6 form-group">
                        @*Email khách*@
                        <label>Email</label>
                        <input class="form-control" type="text" placeholder="example@email.com">
                    </div>
                    <div class="col-md-6 form-group">
                        @*Số đt*@
                        <label>Số điện thoại</label>
                        <input class="form-control" type="text" placeholder="0123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phường/Xã</label>
                        <input class="form-control" type="text" placeholder="Phường 13">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Quận/Huyện</label>
                        <input class="form-control" type="text" placeholder="Quận 10">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Tỉnh/Thành phố</label>
                        <input class="form-control" type="text" placeholder="Hồ Chí Minh">
                    </div>

                    <div class="col-md-6 form-group">
                        <label>Quốc gia</label>
                        <select class="custom-select">
                            <option selected>Việt Nam</option>
                            <option>Hoa Kỳ</option>
                            <option>Trung Quốc</option>
                            <option>Liên Bang Nga</option>
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="shipto">
                            @*Điền form giao cho địa chỉ khác*@
                            <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">Giao đến địa chỉ khác</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="collapse mb-4" id="shipping-address">
                <h4 class="font-weight-semi-bold mb-4">Địa chỉ giao hàng khác</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Họ và tên</label>
                        <input class="form-control" type="text" placeholder="Nguyễn Văn A">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" placeholder="example@email.com">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số điện thoại</label>
                        <input class="form-control" type="text" placeholder="0123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phường/Xã</label>
                        <input class="form-control" type="text" placeholder="Phường 13">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Quận/Huyện</label>
                        <input class="form-control" type="text" placeholder="Quận 10">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Tỉnh/Thành phố</label>
                        <input class="form-control" type="text" placeholder="Hồ Chí Minh">
                    </div>

                    <div class="col-md-6 form-group">
                        <label>Quốc gia</label>
                        <select class="custom-select">
                            <option selected>Việt Nam</option>
                            <option>Hoa Kỳ</option>
                            <option>Trung Quốc</option>
                            <option>Liên Bang Nga</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tổng đơn hàng</h4>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-medium mb-3">Sản phẩm</h5>
                    <div class="d-flex justify-content-between">
                        @*Tên các đơn hàng*@
                        <p>Lịch sử Đảng Cộng sản Việt Nam</p>
                        @*Giá các đơn hàng*@
                        <p>100.000VND</p>
                    </div>
                    <hr class="mt-0">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Tiền sách</h6>
                        @*Tổng tiền tất cả sách*@
                        <h6 class="font-weight-medium">100.000VND</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Tổng cộng</h5>
                        @*Tổng tiền tất cả sách*@
                        <h5 class="font-weight-bold">100.000VND</h5>
                    </div>
                </div>
            </div>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Phương thức thanh toán</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="momo">
                            <label class="custom-control-label" for="momo">Momo</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                            <label class="custom-control-label" for="directcheck">Thanh toán khi nhận hàng</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Đặt hàng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->
