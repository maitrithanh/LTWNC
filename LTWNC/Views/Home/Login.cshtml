@model LTWNC.Models.TAIKHOAN
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(s => s.USERNAME)
                        @Html.TextBoxFor(s => s.USERNAME, "", new { @class = "form-control", @placeholder = "UserName" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.MATKHAU)
                        @Html.PasswordFor(m => m.MATKHAU, new { @class = "form-control", @placeholder = "MATKHAU" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        <input type="submit" name="submit" class="btn btn-primary" value="Register ?" />
                    </div>

                }
            </div>
        </div>
        <footer>
        </footer>
    </div>
</div>
