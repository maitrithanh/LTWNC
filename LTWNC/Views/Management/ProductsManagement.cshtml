@using LTWNC.Models;
@model IEnumerable<LTWNC.Models.SANPHAM>

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    ViewBag.Current = "QuanLySanPham";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
    TAIKHOAN user = Session["User"] as TAIKHOAN;
}
<link href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>

<p class="btn btn-success">
    @Html.ActionLink("Thêm Sản Phẩm", "Create", "Product")
</p>

<style>
    .product-meta {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .product-meta:hover {
            width: 300px;
            white-space: normal;
            overflow: hidden;
            cursor: pointer;
        }
</style>

<div class="box-section-content">
    <table id="example" class="table table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Hình Ảnh
                </th>
                <th>
                    Số Lượng
                </th>
                <th>
                    Mô Tả
                </th>
                <th>
                    Danh Mục
                </th>
                <th>
                    Nhân Viên
                </th>
                <th>
                    Đơn Giá
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TENSP)
                    </td>
                    <td>
                        @if (item.HINHSP != null)
                        {
                            <img src="@Url.Content(item.HINHSP)" alt="@Html.DisplayFor(modelItem => item.TENSP)" height="50" width="50" />
                        }
                        else
                        {
                            <img src="~/Content/Images/No_Image_Available.jpg" alt="@Html.DisplayFor(modelItem => item.TENSP)" height="50" width="50" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SOLUONG)
                    </td>
                    <td class="product-meta">
                        @Html.DisplayFor(modelItem => item.MOTA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DANHMUC.TENDANHMUC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NHANVIEN.HOTENNV)
                    </td>
                    <td class="ui-money">
                        @Convert.ToDecimal(item.DONGIA).ToString("N0")đ
                    </td>
                    <td style="text-align: center;">
                        <span class="btn btn-warning">
                            <a href="@Url.Action("Edit", "Product", new { id = item.IDSP })" class="">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </span>

                        <span class="btn btn-primary">
                            <a href="@Url.Action("ProductDetai", "Product", new { id = item.IDSP })" class="">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </span>

                        <span class="btn btn-danger">
                            <a href="@Url.Action("Delete", "Product", new { id = item.IDSP })" class="">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Hình Ảnh
                </th>
                <th>
                    Số Lượng
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>