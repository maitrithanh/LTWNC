@model IEnumerable<LTWNC.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<link href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<p class="btn btn-success">
    @Html.ActionLink("Thêm Nhân viên", "Create", "Personnel")
</p>

<style>
    .product-meta {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .product-meta:hover {
            width: 300px;
            white-space: normal;
            overflow: hidden;
            cursor: pointer;
        }
</style>

<div class="box-section-content">
    <table id="example" class="table table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Avatar
                </th>
                <th>
                    Họ và tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Chức vụ
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @if (item.AVATARNV != null)
                        {
                            <img src="@Url.Content(item.AVATARNV)" alt="@Html.DisplayFor(modelItem => item.AVATARNV)" height="50" width="50" />
                        }
                        else
                        {
                            <img src="~/Content/Images/No_Image_Available.jpg" alt="@Html.DisplayFor(modelItem => item.AVATARNV)" height="50" width="50" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HOTENNV)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EMAIL)
                    </td>
                    <td class="product-meta">
                        @Html.DisplayFor(modelItem => item.DIACHI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CHUCVU.TENCV)
                    </td>

                    <td style="text-align: center;">
                        <span class="btn btn-warning">
                            <a href="@Url.Action("Edit", "Personnel", new { id = item.ID })" class="">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </span>

                        <span class="btn btn-primary">
                            <a href="@Url.Action("Details", "Personnel", new { id = item.ID })" class="">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </span>
                        <span class="btn btn-danger">
                            <a href="@Url.Action("DeleteNV", "Personnel", new { id = item.ID })" class="">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </span>


                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Avatar
                </th>
                <th>
                    Họ và tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Chức vụ
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
