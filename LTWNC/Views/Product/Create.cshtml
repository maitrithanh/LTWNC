@model LTWNC.Models.SANPHAM

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<link href="~/Content/management-form.css" rel="stylesheet" />
<script src="~/Scripts/main.js" language="JavaScript" type="text/javascript"></script>

<div class="box-form">
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4 class="title-form">THÊM SẢN PHẨM</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row p-0">
                <span class="col label-name">Tên Sản Phẩm</span>
                @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "input-form col-10" } })
                @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">Số Lượng</span>
                @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "input-form col-10" } })
                @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">Giá Bán</span>
                @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { @class = "input-form col-10" } })
                @Html.ValidationMessageFor(model => model.DONGIA, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">Mô Tả</span>
                @Html.TextAreaFor(model => model.MOTA, new { htmlAttributes = new { @class = "input-form col-10" } })
                @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">Hình Sản Phẩm</span>
                <div class="input-form col-10">
                    <img src="~/Content/Images/No_Image_Available.jpg" class="img-create" alt="Thêm Sản Phẩm" id="previewImg" />
                    <input type="file" style="display: inline; width: 60%;" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                </div>
                @Html.ValidationMessageFor(model => model.HINHSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">Danh Mục</span>
                @Html.DropDownList("IDDANHMUC", null, htmlAttributes: new { @class = "input-form col-10" })
                @Html.ValidationMessageFor(model => model.IDDANHMUC, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row p-0">
                <span class="col label-name">ID Nhân Viên</span>
                @Html.DropDownList("IDNV", null, htmlAttributes: new { @class = "input-form col-10" })
                @Html.ValidationMessageFor(model => model.IDNV, "", new { @class = "text-danger" })
            </div>

            <div class="form-btn d-flex justify-content-center form-btn">
                <input type="submit" value="Thêm Sản Phẩm" class="btn btn-primary" style="width: 100%" />
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Trở Lại", "ProductsManagement", "Management")
</div>

@Scripts.Render("~/bundles/jquery")