@model LTWNC.Models.CTDH
<style>
    .feedback {
        margin-top: 2px;
        margin-left: 4px;
        padding: 7px;
        border-radius: 8px;
        background: #ffc107;
        border: none;
        color: white;
        height: 41px;
        font-size: 18px;
    }

        .btn:hover, .feedback:hover {
            color: white;
            background-color: rgb(0, 132, 255);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

        .feedback:hover {
            background: #c49a1e;
        }
</style>


<tr>
    <td>
        @Html.Action("InfoSPFeeback", "Product", new { id = Model.IDSP })

    </td>

    <td style="padding-top: 58px;">
        @Model.SOLUONG
    </td>
    <td style="padding-top: 58px;">

        @Convert.ToDecimal(Model.THANHTIEN).ToString("N0")đ
    </td>
    <td style="padding-top: 51px;">


        <span class="btn btn-primary">
            <a href="@Url.Action("ProductDetai", "Product", new { id = Model.IDSP })" class="">
                <i class="fa-solid fa-pen-to-square"></i>
                Mua lại
            </a>
        </span>

        <span>

            <button name="name" id="btn-order" value="Đặt Hàng" class="feedback">
                <i class='bx bx-comment-detail'></i>
                Đánh giá
            </button>
        </span>
    </td>
</tr>

